<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".genre.GenreActivity">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/activity_genre_tool_bar"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/genre_fragment_container"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_margin="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_genre_tool_bar"

        android:name="com.example.bookdiscover.genre.GenreFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>