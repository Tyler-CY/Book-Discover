<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/resultVolumeListFragment">

    <fragment
        android:id="@+id/queryFragment"
        android:name="com.example.bookdiscover.result.ResultFragment"
        android:label="fragment_query"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_queryFragment_to_saleInfoFragment"
            app:destination="@id/saleInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/saleInfoFragment"
        android:name="com.example.bookdiscover.volume.SaleInfoFragment"
        android:label="fragment_sale_info"
        tools:layout="@layout/fragment_sale_info" >

        <action
            android:id="@+id/action_saleInfoFragment_to_queryFragment"
            app:destination="@id/queryFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultVolumeListFragment"
        android:name="com.example.bookdiscover.result.ResultVolumeListFragment"
        android:label="fragment_result_volume_list"
        tools:layout="@layout/fragment_result_volume_list" >
        <action
            android:id="@+id/action_resultVolumeListFragment_to_queryFragment"
            app:destination="@id/queryFragment" />
    </fragment>
</navigation>